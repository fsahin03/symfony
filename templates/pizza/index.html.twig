{% extends 'base.html.twig' %}

{% block title %}Hello PizzaController!{% endblock %}

{% block body %}
    <div class="container">
        <header>
            <h1 class="display-4">pizza</h1>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Disabled</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <img src="{{ asset('images/pizza.jpg')}}" class="img-fluid"  width="1500 px" alt="pita">
    <div class="row gy-3">

        {% for cat in cats %}
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body text-center">
                    <a style="color: inherit; text-decoration: none" href="{{ path('pizza',{id:cat.id}) }}">
                    <img alt="no image" class="product-img img-fluid center-block" src="{{ asset(cat.image) }}">
                    <div class="card-title mb-3">{{ cat.name }}</div>
                    </a>
                </div>
            </div>
    </div>
        {% endfor %}

{% endblock %}
